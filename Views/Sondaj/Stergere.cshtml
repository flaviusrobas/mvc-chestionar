@model WebAppChestionar.Models.Sondaj

@{
    ViewData["Title"] = "Stergere";
}

<h1 style="color: darkblue">Stergere</h1>
<hr />
<h3 style="color: red">Sigur ștergi întrebarea?</h3>
<hr />
<h4 style="color: darkgreen">Sondaj</h4>
<hr />
<div>    
    <dl class="row">
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Intrebari) *@
            Întrebare
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Intrebari)
        </dd>
        <dt class="col-sm-2">
            @* @Html.DisplayNameFor(model => model.Raspunsuri) *@
            Răspuns
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Raspunsuri)
        </dd>
    </dl>

    <form asp-action="Stergere">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Șterge" class="btn btn-danger" /> |
        <a asp-action="Index">Înapoi la lista de întrebări</a>
    </form>
</div>
